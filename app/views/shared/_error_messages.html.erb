<% if user_errors.any? %>
  <div class="error_explanation">
    <div class="alert alert-danger">
      <%= t".content" %>
      <%= pluralize user_errors.count, t(".error") %>
    </div>
    <ul>
    <% user_errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
